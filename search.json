---
layout: null
---
[
  {% for post in site.posts %}
    {
      "title"    : "{{ post.title | escape }}",
      "summary"  : "{{ post.summary }}",
      "category" : "{{ post.category }}",
      "tags"     : "{{ post.tags | join: ' ' }}",
      "url"      : "http://127.0.0.1:4000{{ post.url }}",
      "date"     : "{{ post.date | date_to_string }}"
    } {% unless forloop.last %},{% endunless %}
  {% endfor %}
]